<div class="container">
    <h3 class="text-center">Contacts Us</h3>
    <%= form_for "/contact" do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :comments %>
        <%= f.text_area :comments %>

        <%= f.submit 'Submit' %>
    <% end %>
</div>
